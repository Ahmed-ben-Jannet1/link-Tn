<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <br><br><br><br><br><br>
            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h2 class="product__title">
                                        <%= product.title %>
                                    </h2>
                                </header>
                                <div class="card__image">
                                    <img class="product_image" src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                                </div>
                                <div style="border: 0.1rem solid black;padding: 0%;margin-top: 0.4rem;"></div>
                                <div class="card__content">
                                    <h2 class="product__category">
                                        <%= product.category %>
                                    </h2>
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= product.price %>
                                    </h2>
                                    <h4 class="product__description">
                                        <%= product.description %>
                                    </h4>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>
                                    <input type="hidden" value="<%= product._id %>" name="productId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>